<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controle.PrincipalController">
   <children>
      <VBox layoutX="1.0" layoutY="-1.0" prefHeight="768.0" prefWidth="1366.0">
         <children>
            <MenuBar prefWidth="289.0">
              <menus>
                <Menu mnemonicParsing="false" text="Cadastrar">
                  <items>
                    <MenuItem mnemonicParsing="false" onAction="#mostrarFormPorco" text="Porco" />
                        <MenuItem mnemonicParsing="false" onAction="#mostrarFormBaia" text="Baia" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Listar">
                  <items>
                    <MenuItem mnemonicParsing="false" onAction="#mostrarListaPorco" text="Porco" />
                        <MenuItem mnemonicParsing="false" onAction="#mostrarListaBaia" text="Baia" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <VBox fx:id="vbox" alignment="CENTER" prefHeight="768.0" prefWidth="1366.0">
               <children>
                  <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../main/pork.png" />
                     </image>
                  </ImageView>
                  <Label text="PEPPA PIG SYSTEM" textFill="#792727">
                     <font>
                        <Font name="System Bold" size="19.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
